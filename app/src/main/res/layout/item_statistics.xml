<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_margin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="Cross-river State"
            style="@style/Title"
            android:padding="2dp"
            app:layout_constraintBottom_toTopOf="@id/name_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#a324a5"
            android:ellipsize="end"
            android:gravity="center_horizontal|center_vertical"
            android:padding="@dimen/item_stats_padding"
            android:singleLine="true"
            android:text="Cases Confirmed"
            android:textColor="@color/white"
            style="@style/DetailTitle"
            app:layout_constraintBottom_toTopOf="@id/name_2"
            app:layout_constraintEnd_toStartOf="@id/value_1"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/state" />

        <TextView
            android:id="@+id/value_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#a23546"
            android:ellipsize="end"
            android:gravity="center_horizontal|center_vertical"
            android:padding="@dimen/item_stats_padding"
            android:singleLine="true"
            android:text="@string/default_count"
            android:textColor="@color/white"
            style="@style/DetailTitle"
            app:layout_constraintBottom_toTopOf="@id/value_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/name_1"
            app:layout_constraintTop_toBottomOf="@id/state" />

        <TextView
            android:id="@+id/name_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#a324a5"
            android:ellipsize="end"
            android:gravity="center_horizontal|center_vertical"
            android:padding="@dimen/item_stats_padding"
            android:singleLine="true"
            android:text="Active Cases"
            android:textColor="@color/white"
            style="@style/DetailTitle"
            app:layout_constraintBottom_toTopOf="@id/name_3"
            app:layout_constraintEnd_toStartOf="@id/value_2"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_1" />

        <TextView
            android:id="@+id/value_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#a23546"
            android:ellipsize="end"
            android:gravity="center_horizontal|center_vertical"
            android:padding="@dimen/item_stats_padding"
            android:singleLine="true"
            android:text="@string/default_count"
            android:textColor="@color/white"
            style="@style/DetailTitle"
            app:layout_constraintBottom_toTopOf="@id/value_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/name_2"
            app:layout_constraintTop_toBottomOf="@id/value_1" />

        <TextView
            android:id="@+id/name_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#a324a5"
            android:ellipsize="end"
            android:gravity="center_horizontal|center_vertical"
            android:padding="@dimen/item_stats_padding"
            android:singleLine="true"
            android:text="Number Discharged"
            android:textColor="@color/white"
            style="@style/DetailTitle"
            app:layout_constraintBottom_toTopOf="@id/name_4"
            app:layout_constraintEnd_toStartOf="@id/value_3"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_2" />

        <TextView
            android:id="@+id/value_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#a23546"
            android:ellipsize="end"
            android:gravity="center_horizontal|center_vertical"
            android:padding="@dimen/item_stats_padding"
            android:singleLine="true"
            android:text="@string/default_count"
            android:textColor="@color/white"
            style="@style/DetailTitle"
            app:layout_constraintBottom_toTopOf="@id/value_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/name_3"
            app:layout_constraintTop_toBottomOf="@id/value_2" />

        <TextView
            android:id="@+id/name_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#a324a5"
            android:ellipsize="end"
            android:gravity="center_horizontal|center_vertical"
            android:padding="@dimen/item_stats_padding"
            android:singleLine="true"
            android:text="Deaths"
            android:textColor="@color/white"
            style="@style/DetailTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/value_4"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_3" />

        <TextView
            android:id="@+id/value_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#a23546"
            android:ellipsize="end"
            android:gravity="center_horizontal|center_vertical"
            android:padding="@dimen/item_stats_padding"
            android:singleLine="true"
            android:text="@string/default_count"
            android:textColor="@color/white"
            style="@style/DetailTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/name_4"
            app:layout_constraintTop_toBottomOf="@id/value_3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>